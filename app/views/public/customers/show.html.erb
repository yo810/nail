<div class="container">
  <div class="row">
    <div class="col-md-10 mx-auto">
      <h5 class="mt-3 mb-3">
        <span class="px-3">
          マイページ
        </span>
      </h5>
    </div>
  </div>

    <div class="row mb-3">
      <div class="col-md-2">
        <h5><strong>登録情報</strong></h5>
      </div>
      <div class="colmd-2">
        <%= link_to "編集する", edit_information_path(current_customer), class: "btn btn-success ml-5" %>
      </div>
    </div>

      <div class="row">
        <table class="col-md-8 table table-bordered mt-3">
          <tr>
            <td>氏名</td>
            <td><%= @customer.last_name %> <%= @customer.first_name %></td>
          </tr>

          <tr>
            <td>カナ</td>
            <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
          </tr>

          <tr>
            <td>メールアドレス</td>
            <td><%= @customer.email %></td>
          </tr>
        </table>
      </div>
</div>