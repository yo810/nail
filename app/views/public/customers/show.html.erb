<div class="container">
  <h2 class="title text-center pb-3">My Page</h2>

    <div class="row justify-content-center mb-3">
      <div class="col-2 text-center">
        <h4 class="title">会員情報</h4>
      </div>
    </div>

    <div class="row justify-content-center">
      <table class="col-8 table table-hover table-bordered">
        <tr>
          <td>氏名</td>
          <td><%= @customer.last_name %> <%= @customer.first_name %></td>
        </tr>

        <tr>
          <td>カナ</td>
          <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
        </tr>

        <tr>
          <td>メールアドレス</td>
          <td><%= @customer.email %></td>
        </tr>
      </table>
    </div>
    <div class="row justify-content-center">
      <%= link_to "編集する", edit_information_path(current_customer), class: "btn btn-success btn-lg btn-block col-8" %>
    </div>

    <h4 class="title text-center mt-5">予約一覧</h4>
      <div class="row justify-content-center mt-3">
        <!--<h2 class="text-center">予約一覧</h2>-->
        <table class="col-8 table table-hover table-bordered">
          <thead>
            <tr>
              <th>予約日</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @customer_reservations.each do |customer_reservation| %>
              <td>
                <%= customer_reservation.day %>
                <%= customer_reservation.time %>
              </td>
              <td>
                <%= link_to '削除', menu_reservation_path(customer_reservation.menu.id, customer_reservation.id), method: :delete, data: { confirm: "削除してよろしいですか？", commit: "削除する", cancel: "やめる", title: "ご確認ください" } %>
              </td>
            </tr>
            <% end %>
            <% if @customer_reservations.blank? %>
              <tr>
                <td>予約はありません。</td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>


</div>