<div class="container">
  <div class="row">
    <div class="col-md-10 mx-auto">
      <h5 class="mt-3 mb-3">
        <span class="px-3">
          マイページ
        </span>
      </h5>
    </div>
  </div>

    <div class="row mb-3">
      <div class="col-md-2">
        <h5><strong>登録情報</strong></h5>
      </div>
      <div class="colmd-2">
        <%= link_to "編集する", edit_information_path(current_customer), class: "btn btn-success ml-5" %>
      </div>
    </div>

      <div class="row">
        <table class="col-md-8 table table-bordered mt-3">
          <tr>
            <td>氏名</td>
            <td><%= @customer.last_name %> <%= @customer.first_name %></td>
          </tr>

          <tr>
            <td>カナ</td>
            <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
          </tr>

          <tr>
            <td>メールアドレス</td>
            <td><%= @customer.email %></td>
          </tr>
        </table>
      </div>

      <div class="col-12 mt-3 text-center mx-auto">
        <h3>予約一覧</h3>
        <table class="table">
          <thead>
            <tr>
              <th scope="col">予約日</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @customer_reservations.each do |customer_reservation| %>
              <td>
                <%= customer_reservation.day %>
                <%= customer_reservation.time %>
              </td>
              <td>
              
                <%= link_to '削除', menu_reservation_path(customer_reservation.menu.id, customer_reservation.id), method: :delete, data: { confirm: "削除してよろしいですか？", commit: "削除する", cancel: "やめる", title: "ご確認ください" } %>
              </td>
            </tr>
            <% end %>
            <% if @customer_reservations.blank? %>
              <tr>
                <td>予約はありません。</td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>


</div>