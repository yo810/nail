<div class="container">
  <div class="mx-auto col-12">
    <h4 class="mt-3 mb-3">
      <span class="px-3">
        会員情報編集
      </span>
    </h4>
  </div>

  <%= form_with model: @customer, url: update_information_path(@customer) do |f| %>

    <table class="customer_info customer_form">
			<thead>
				<th></th>
				<th></th>
				<th></th>
			</thead>
			<tbody>
				<tr>
					<td>名前</td>
					<td><%= f.label :last_name, "(姓)" %> <%= f.text_field :last_name %></td>
					<td><%= f.label :first_name, "(名)" %> <%= f.text_field :first_name %></td>
				</tr>

				<tr>
					<td>フリガナ</td>
					<td><%= f.label :last_name_kana, "(セイ)" %> <%= f.text_field :last_name_kana %></td>
					<td><%= f.label :first_name_kana, "(メイ)" %> <%= f.text_field :first_name_kana %></td>
				</tr>

				<tr>
					<td><%= f.label :email, "メールアドレス" %></td>
					<td colspan="2"><%= f.email_field :email %></td>
				</tr>

				<tr>
					<td colspan="2"><%= f.submit "編集内容を保存する", class: "btn btn-primary" %></td>
					<td><%= link_to "退会する", confirm_unsubscribe_path, class: "btn btn-danger" %></td>
				</tr>

			</tbody>
		</table>
	<% end %>
</div>

