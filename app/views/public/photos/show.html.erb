<div class="container">
	<!--<h2 class="text-center"><%= @photos.name %>詳細</h2>-->
	<div class="row justify-content-center">
	  <div>
	  <%= image_tag @photos.get_image, size: "400x400", class: "item_image" %>
		  <div class="text-center">
		    <%= @photos.name %>
	    <div>
	  </div>
	  <% if @photos.favorited_by?(current_customer) %>
    <p>
      <%= link_to photo_favorites_path(@photos), method: :delete do %>
        ♥<%= @photos.favorites.count %>
      <% end %>
    </p>
    <% else %>
    <p>
      <%= link_to photo_favorites_path(@photos), method: :post do %>
        ♡<%= @photos.favorites.count %>
      <% end %>
    </p>
  <% end %>
  </div>
</div>