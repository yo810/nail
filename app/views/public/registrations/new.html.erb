<div class="container title">

  <h2 class="text-center mb-3">Sign up</h2>

  <%= form_with model: @customer, url: registration_path(resource_name), local: true do |f| %>
  <!--<%#= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>-->
    <%= render "public/shared/error_messages", resource: resource %>

    <div class="row justify-content-center mb-3">
      <%= f.text_field :last_name, placeholder:"(性)", class:"form-control col-4" %>
    </div>

    <div class="row justify-content-center mb-3">
      <%= f.text_field :first_name, placeholder:"(名)", class:"form-control col-4" %>
    </div>

    <div class="row justify-content-center mb-3">
      <%= f.text_field :last_name_kana, placeholder:"(セイ)", class:"form-control col-4" %>
    </div>

    <div class="row justify-content-center mb-3">
      <%= f.text_field :first_name_kana, placeholder:"(メイ)", class:"form-control col-4" %>
    </div>

    <div class="row justify-content-center mb-3">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Email", class:"form-control col-4" %>
    </div>

    <div class="row justify-content-center mb-3">
      <!--<%# if @minimum_password_length %>-->
      <!--<em>(<%#= @minimum_password_length %> characters minimum)</em>-->
      <!--<%# end %><br />-->
      <%= f.password_field :password, autocomplete: "new-password", placeholder:"Password", class:"form-control col-4" %>
    </div>

    <div class="row justify-content-center mb-3">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"Password", class:"form-control col-4" %>
    </div>

    <div class="row justify-content-center mb-3">
      <%= f.submit "Sign up", class: "btn btn-primary col-4" %>
    </div>
  <% end %>

</div>
