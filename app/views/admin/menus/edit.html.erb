<div class="container">
	<h2 class="section-ttl"><%= @menu.name %>の編集</h2>
  <%= form_with model: @menu, url: admin_menu_path do |f| %>

	<div class="flex">
		<div>
			  <%= f.label :image, "画像" %>
			<div class="image_field">
				<%= f.file_field :image %>
			</div>
		</div>
		<table class="admin_menu_info menu_form">
			<thead>
				<tr>
					<th></th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td><%= f.label :name, "メニュー名" %></td>
					<td><%= f.text_field :name %></td>
				</tr>
				<tr>
					<td><%= f.label :introduction, "メニュー説明" %></td>
					<td><%= f.text_area :introduction, rows: 3 %></td>
				</tr>
				<tr>
					<td><%= f.label :price, "税抜価格" %></td>
					<td><%= f.number_field :price %> 円</td>
				</tr>
				<tr>
					<td><%= f.label :course, "コース" %></td>
					<td><%= f.text_field :course %></td>
				</tr>
			</tbody>
		</table>
		<div class="flex align-center pl5">
			<%= f.submit '変更', class: "btn btn-primary" %>
		</div>
	</div>
<% end %>
</div>