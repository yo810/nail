<div class="container">

	<h2 class="title text-center pb-5">Menu 新規登録</h2>

　<%= form_with model: @menu, url: admin_menus_path do |f| %>

	<div>
		<!--<div class="row justify-content-center mb-3">-->
		<!--	  <%#= f.label :image, "画像" %>-->
		<!--	<div class="image_field">-->
		<!--		<%#= f.file_field :image %>-->
		<!--	</div>-->
		<!--</div>-->
		<table class="row justify-content-center mb-3 title">
			<thead>
				<tr>
					<th></th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td><%= f.label :name, "メニュー名" %></td>
					<td><%= f.text_field :name, class: "form-control" %></td>
				</tr>
				<tr>
					<td><%= f.label :introduction, "メニュー説明" %></td>
					<td><%= f.text_area :introduction, rows: 3, class: "form-control" %></td>
				</tr>
				<tr>
					<td><%= f.label :price, "税抜価格" %></td>
					<td><%= f.number_field :price, class: "form-control" %></td>
				</tr>
				<tr>
					<td><%= f.label :course, "コース" %></td>
					<td><%= f.select :course, [['60',1], ['90',2], ['120',3]], {}, {class: 'form-control'} %></td>
				</tr>
			</tbody>
		</table>
		<div class="row justify-content-center">
			<%= f.submit '登録', class: "btn btn-primary btn-lg d-block col-4" %>
		</div>
	</div>
　<% end %>
</div>