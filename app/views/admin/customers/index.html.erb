<div class="container">
  <h2 class="section-ttl">会員一覧</h2>
  <table class="admin_customer_index has_border">
  	<thead>
  		<th>会員ID</th>
  		<th>名前</th>
  		<th>フリガナ</th>
  		<th>会員ステータス</th>
  		<th></th>
  	</thead>
  	<tbody>
  		<% @customers.each do |customer| %>
  			<tr>
  				<td><%= customer.id %></td>
  				<td><%= customer.full_name %></td>
  				<td><%= customer.full_name_kana %></td>
  				<td>
  					<% if customer.is_deleted? %>
  						<span class="text-active">有効</span>
  					<% else %>
  						<span class="text-invalid">退会済み</span>
  					<% end %>
  				</td>
  				<td><%= link_to "詳細", admin_customer_path(customer), class: "btn btn-primary" %></td>
  			</tr>
  		<% end %>
  	</tbody>
  </table>
  <%= paginate @customers %>
</div>