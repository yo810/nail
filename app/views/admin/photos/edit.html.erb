<div class="container">
	<h2 class="section-ttl"><%= @photo.name %>の編集</h2>
  <%= form_with model: @photo, url: admin_photo_path do |f| %>

	<div class="flex">
		<div>
			  <%= f.label :image, "画像" %>
			<div class="image_field">
				<%= f.file_field :image %>
			</div>
		</div>
		<table class="admin_photo_info photo_form">
			<thead>
				<tr>
					<th></th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td><%= f.label :name, "フォト名" %></td>
					<td><%= f.text_field :name %></td>
				</tr>
			</tbody>
		</table>
		<div class="flex align-center pl5">
			<%= f.submit '変更', class: "btn btn-primary" %>
		</div>
	</div>
<% end %>
</div>