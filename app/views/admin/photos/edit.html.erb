<div class="container title">
	<h2 class="text-center pb-5"><%= @photo.name %>の編集</h2>
  <%= form_with model: @photo, url: admin_photo_path do |f| %>

	<div>
		<table class="row justify-content-center mb-5">
			<tbody>
				<tr>
					<td><%= f.label :image, "画像" %></td>
					<td>
			      <span class="btn btn-file btn-info form-control mb-3"><%= f.file_field :image, accept: "image/*" %>画像選択</span>
					</td>
				</tr>
				<tr>
					<td><%= f.label :name, "フォト名" %></td>
					<td><%= f.text_field :name, class: "form-control" %></td>
				</tr>
			</tbody>
		</table>
		<div class="row justify-content-center">
			<%= f.submit '変更', class: "btn btn-primary btn-lg btn-block col-3 mb-3" %>
		</div>
		<div class="row justify-content-center">
			<%= link_to "削除する", admin_photo_path(@photo.id), method: :delete, data: { confirm: "削除してよろしいですか？", commit: "削除する", cancel: "やめる", title: "ご確認ください" }, class: "btn btn-danger btn-lg btn-block col-3" %>
		</div>
	</div>
<% end %>
</div>