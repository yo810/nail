<div class="container">

  <h2 class="row justify-content-center mb-3">管理者ログイン</h2>

  <%= form_with model: @admin, url: session_path(resource_name), local: true do |f| %>
    <div class="row justify-content-center mb-3">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Email", class:"form-control col-4" %>
    </div>

    <div class="row justify-content-center mb-3">
      <%= f.password_field :password, autocomplete: "current-password", placeholder:"Password", class:"form-control col-4" %>
    </div>

    <div class="row justify-content-center">
      <%= f.submit "Log in", class: "btn btn-primary col-4" %>
    </div>
  <% end %>

  <%= render "admin/shared/links" %>

</div>
